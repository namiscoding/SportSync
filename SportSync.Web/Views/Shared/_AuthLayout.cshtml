@using Microsoft.AspNetCore.Identity
@using SportSync.Data.Entities

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportSync</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body class="auth-body">
    <div class="auth-container">
        <div class="auth-wrapper">
            <div class="auth-header text-center mb-4">
                <a asp-controller="Home" asp-action="Index" class="auth-logo d-inline-block mb-3">
                    <i class="fas fa-running text-primary me-2"></i>
                    <span class="fw-bold">Sport<span class="text-primary">Sync</span></span>
                </a>
                <h1 class="auth-title">@ViewData["AuthTitle"]</h1>
                <p class="auth-subtitle text-muted">@ViewData["AuthSubtitle"]</p>
            </div>

            <div class="auth-content">
                @RenderBody()
            </div>

            <div class="auth-footer text-center mt-4">
                <p class="mb-0 small text-muted">© @DateTime.Now.Year SportSync. Đã đăng ký Bản quyền.</p>
                <div class="mt-2">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none small">Trang chủ</a> ·
                    <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none small">Chính sách bảo mật</a> ·
                    <a href="#" class="text-decoration-none small">Điều khoản sử dụng</a>
                </div>
            </div>
        </div>

        <div class="auth-background">
            <div class="auth-overlay"></div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>