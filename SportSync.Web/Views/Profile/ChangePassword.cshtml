    @model SportSync.Web.Models.ViewModels.Profile.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi Mật Khẩu";
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    var statusMessageClass = Model.StatusMessage.ToLower().Contains("lỗi") ? "danger" : "success";
    <div class="alert alert-@statusMessageClass alert-dismissible" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @Model.StatusMessage
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="ChangePassword" asp-controller="Manage">
            <h4>Thay đổi mật khẩu của bạn.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="OldPassword" type="password" class="form-control" autocomplete="current-password" placeholder="Mật khẩu hiện tại" />
                <label asp-for="OldPassword"></label>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="NewPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Mật khẩu mới" />
                <label asp-for="NewPassword"></label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Xác nhận mật khẩu mới" />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Đổi Mật Khẩu</button>
        </form>
    </div>
    <div class="col-md-6">
        <h4>Tùy chọn khác</h4>
        <hr />
        <ul class="nav nav-pills flex-column">
            <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Profile">Thông tin cá nhân</a></li>
        </ul>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
