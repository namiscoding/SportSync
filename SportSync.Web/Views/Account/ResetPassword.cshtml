@model SportSync.Web.Models.ViewModels.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
    Layout = "_AuthLayout"; // Sử dụng layout chung
}

<div class="auth-content">
    <h4 class="auth-title">Đặt lại mật khẩu</h4>
    <p class="auth-subtitle">Đặt lại mật khẩu cho tài khoản với số điện thoại: @Model.PhoneNumber</p>
    <hr />

    <form asp-action="ResetPassword" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <input type="hidden" asp-for="PhoneNumber" />
        <input type="hidden" asp-for="FirebaseIdToken" />

        <div class="form-floating mb-3">
            <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu mới" />
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu mới" />
            <label asp-for="ConfirmPassword"></label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Đặt Lại Mật Khẩu</button>
    </form>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}