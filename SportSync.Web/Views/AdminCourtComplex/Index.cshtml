﻿@using SportSync.Web.Models.ViewModels.Admin
@using SportSync.Web.Models.ViewModels.Court
@model IEnumerable<CourtComplexViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý hệ thống sân";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">
                <i class="fas fa-building text-info me-2"></i>
                Quản lý hệ thống sân
            </h2>
            <p class="text-muted mb-0">Quản lý danh sách các hệ thống sân và trạng thái hoạt động</p>
        </div>
        <div class="d-flex align-items-center">
            <span class="badge bg-info fs-6 me-3">
                <i class="fas fa-building me-1"></i>
                @Model.Count() hệ thống sân
            </span>
        </div>
    </div>

    <!-- Search Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm theo tên hệ thống sân, chủ sân..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Tìm kiếm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Table Section -->
    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-table me-2"></i>
                Danh sách hệ thống sân
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0">
                                <i class="fas fa-building me-2"></i>Tên hệ thống sân
                            </th>
                            <th class="border-0">
                                <i class="fas fa-crown me-2"></i>Chủ sân
                            </th>
                            <th class="border-0">
                                <i class="fas fa-phone me-2"></i>Số điện thoại
                            </th>
                            <th class="border-0">
                                <i class="fas fa-map-marker-alt me-2"></i>Địa chỉ
                            </th>
                            <th class="border-0">
                                <i class="fas fa-city me-2"></i>Thành phố
                            </th>
                            <th class="border-0">
                                <i class="fas fa-map me-2"></i>Quận
                            </th>
                            <th class="border-0">
                                <i class="fas fa-futbol me-2"></i>Loại sân
                            </th>
                            <th class="border-0">
                                <i class="fas fa-circle me-2"></i>Hoạt động
                            </th>
                            <th class="border-0 text-center">
                                <i class="fas fa-cogs me-2"></i>Hành động
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cc in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-info rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="fas fa-building text-white"></i>
                                        </div>
                                        <a asp-action="Details" asp-route-id="@cc.CourtComplexId" class="fw-medium text-decoration-none">
                                            @cc.Name
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-medium">@cc.OwnerFullName</span>
                                </td>
                                <td>
                                    <span class="text-muted">@cc.OwnerPhoneNumber</span>
                                </td>
                                <td>
                                    <span class="text-muted">@cc.Address</span>
                                </td>
                                <td>
                                    <span class="text-muted">@cc.City</span>
                                </td>
                                <td>
                                    <span class="text-muted">@cc.District</span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-futbol me-1"></i>@cc.SportTypeName
                                    </span>
                                </td>
                                <td>
                                    @if (cc.IsActiveByOwner)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Có
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle me-1"></i>Không
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2 justify-content-center">
                                        <a asp-action="Details" asp-route-id="@cc.CourtComplexId" class="btn btn-outline-info btn-sm" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form asp-action="ToggleCourtComplexStatus" method="post" style="display:inline;">
                                            <input type="hidden" name="courtComplexId" value="@cc.CourtComplexId" />
                                            @if (cc.IsActiveByOwner)
                                            {
                                                <button type="submit" class="btn btn-outline-warning btn-sm" title="Gỡ hoạt động">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-outline-success btn-sm" title="Khôi phục hoạt động">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            }
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-building fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Không có hệ thống sân nào</h5>
            <p class="text-muted">Hãy thử tìm kiếm với từ khóa khác</p>
        </div>
    }
</div>

<style>
.avatar-sm {
    width: 32px;
    height: 32px;
    font-size: 14px;
}

.table th {
    font-weight: 600;
    color: #495057;
}

.table td {
    vertical-align: middle;
}

.badge {
    font-size: 0.75rem;
}

.btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}

.table a:hover {
    color: #0d6efd !important;
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}