@model SportSync.Web.Models.ViewModels.CourtComplexDetailViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chi tiết hệ thống sân";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">
                <i class="fas fa-building text-info me-2"></i>
                Chi tiết hệ thống sân: @Model.Name
            </h2>
            <p class="text-muted mb-0">Thông tin chi tiết và quản lý hệ thống sân</p>
        </div>
        <div class="d-flex align-items-center">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </div>

    <!-- Main Information Card -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Thông tin chung
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-building me-2"></i>Tên hệ thống sân
                                </label>
                                <p class="mb-0 fs-5">@Model.Name</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-crown me-2"></i>Chủ sân
                                </label>
                                <p class="mb-0">@Model.OwnerFullName</p>
                                <small class="text-muted">SĐT: @Model.OwnerPhoneNumber</small>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-map-marker-alt me-2"></i>Địa chỉ
                                </label>
                                <p class="mb-0">@Model.Address, @Model.District, @Model.City@(string.IsNullOrEmpty(Model.Ward) ? "" : ", " + Model.Ward)</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-futbol me-2"></i>Loại sân
                                </label>
                                <span class="badge bg-secondary fs-6">@Model.SportTypeName</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-phone me-2"></i>Liên hệ
                                </label>
                                <p class="mb-1">SĐT: @(string.IsNullOrEmpty(Model.ContactPhoneNumber) ? "Chưa có" : Model.ContactPhoneNumber)</p>
                                <p class="mb-0">Email: @(string.IsNullOrEmpty(Model.ContactEmail) ? "Chưa có" : Model.ContactEmail)</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-clock me-2"></i>Giờ hoạt động mặc định
                                </label>
                                <p class="mb-0">@(Model.DefaultOpeningTime.HasValue ? $"{Model.DefaultOpeningTime.Value.ToString(@"hh\:mm")} - {Model.DefaultClosingTime.Value.ToString(@"hh\:mm")}" : "Chưa thiết lập")</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-circle me-2"></i>Trạng thái hoạt động
                                </label>
                                @if (Model.IsActiveByOwner)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="fas fa-check-circle me-1"></i>Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger fs-6">
                                        <i class="fas fa-times-circle me-1"></i>Không hoạt động
                                    </span>
                                }
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-calendar me-2"></i>Ngày tạo
                                </label>
                                <p class="mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                @if (Model.UpdatedAt.HasValue)
                                {
                                    <small class="text-muted">Cập nhật: @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                }
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">
                                <i class="fas fa-align-left me-2"></i>Mô tả
                            </label>
                            <p class="mb-0">@Model.Description</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.GoogleMapsLink))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">
                                <i class="fas fa-map me-2"></i>Google Maps
                            </label>
                            <a href="@Model.GoogleMapsLink" target="_blank" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-external-link-alt me-1"></i>Xem trên Google Maps
                            </a>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.MainImageUrl))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">
                                <i class="fas fa-image me-2"></i>Hình ảnh chính
                            </label>
                            <div>
                                <img src="@Model.MainImageUrl" alt="Hình ảnh chính" class="img-fluid rounded" style="max-width: 300px;" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs me-2"></i>
                        Hành động
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="ToggleCourtComplexStatus" method="post" class="mb-3">
                        <input type="hidden" name="courtComplexId" value="@Model.CourtComplexId" />
                        @if (Model.IsActiveByOwner)
                        {
                            <button type="submit" class="btn btn-warning w-100">
                                <i class="fas fa-ban me-2"></i>Gỡ hoạt động
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-check me-2"></i>Khôi phục hoạt động
                            </button>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Courts Section -->
    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-table-tennis me-2"></i>
                Danh sách sân (@Model.Courts.Count)
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Courts.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0">
                                    <i class="fas fa-table-tennis me-2"></i>Tên sân
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-futbol me-2"></i>Loại sân
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-user-cog me-2"></i>Trạng thái bởi chủ sân
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-circle me-2"></i>Hoạt động
                                </th>
                                <th class="border-0 text-center">
                                    <i class="fas fa-cogs me-2"></i>Hành động
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var court in Model.Courts)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-success rounded-circle d-flex align-items-center justify-content-center me-3">
                                                <i class="fas fa-table-tennis text-white"></i>
                                            </div>
                                            <span class="fw-medium">@court.Name</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@court.SportTypeName</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@court.StatusByOwner</span>
                                    </td>
                                    <td>
                                        @if (court.IsActiveByOwner)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Có
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle me-1"></i>Không
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2 justify-content-center">
                                            <form asp-action="ToggleCourtStatus" method="post" style="display:inline;">
                                                <input type="hidden" name="courtId" value="@court.CourtId" />
                                                @if (court.IsActiveByOwner)
                                                {
                                                    <button type="submit" class="btn btn-outline-warning btn-sm" title="Tạm ngưng sân">
                                                        <i class="fas fa-pause"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-outline-success btn-sm" title="Kích hoạt sân">
                                                        <i class="fas fa-play"></i>
                                                    </button>
                                                }
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-table-tennis fa-2x text-muted mb-3"></i>
                    <h6 class="text-muted">Chưa có sân nào</h6>
                </div>
            }
        </div>
    </div>
</div>

<style>
.avatar-sm {
    width: 32px;
    height: 32px;
    font-size: 14px;
}

.table th {
    font-weight: 600;
    color: #495057;
}

.table td {
    vertical-align: middle;
}

.badge {
    font-size: 0.75rem;
}

.btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}

.form-label {
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
