﻿@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Dashboard Admin";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">
                <i class="fas fa-tachometer-alt text-primary me-2"></i>
                Dashboard Admin
            </h2>
            <p class="text-muted mb-0">Tổng quan hệ thống quản lý sân thể thao</p>
        </div>
        <div class="d-flex align-items-center">
            <span class="badge bg-primary fs-6">
                <i class="fas fa-calendar me-1"></i>
                @DateTime.Now.ToString("dd/MM/yyyy")
            </span>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                <i class="fas fa-users me-2"></i>Tổng khách hàng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalCustomers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                <i class="fas fa-crown me-2"></i>Chủ sân
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalCourtOwners</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-crown fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                <i class="fas fa-building me-2"></i>Hệ thống sân
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalCourtComplexes</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                <i class="fas fa-futbol me-2"></i>Loại sân
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalSportTypes</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-futbol fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>
                        Hành động nhanh
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-controller="AdminUser" asp-action="UserManager" class="btn btn-outline-primary w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-users fa-2x mb-2"></i>
                                <span>Quản lý khách hàng</span>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="AdminCourtOwner" asp-action="OwnerManager" class="btn btn-outline-warning w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-crown fa-2x mb-2"></i>
                                <span>Quản lý chủ sân</span>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="AdminCourtComplex" asp-action="Index" class="btn btn-outline-info w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-building fa-2x mb-2"></i>
                                <span>Quản lý hệ thống sân</span>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="AdminSportType" asp-action="Index" class="btn btn-outline-success w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-futbol fa-2x mb-2"></i>
                                <span>Quản lý loại sân</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        Thống kê gần đây
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0">
                            <div>
                                <i class="fas fa-user-plus text-success me-2"></i>
                                <span>Khách hàng mới đăng ký</span>
                            </div>
                            <span class="badge bg-success rounded-pill">@ViewBag.NewCustomers</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0">
                            <div>
                                <i class="fas fa-crown text-warning me-2"></i>
                                <span>Chủ sân mới</span>
                            </div>
                            <span class="badge bg-warning rounded-pill">@ViewBag.NewCourtOwners</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0">
                            <div>
                                <i class="fas fa-building text-info me-2"></i>
                                <span>Hệ thống sân mới</span>
                            </div>
                            <span class="badge bg-info rounded-pill">@ViewBag.NewCourtComplexes</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Thông tin hệ thống
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item border-0">
                            <i class="fas fa-server text-primary me-2"></i>
                            <strong>Phiên bản:</strong> SportSync v1.0
                        </div>
                        <div class="list-group-item border-0">
                            <i class="fas fa-calendar text-success me-2"></i>
                            <strong>Cập nhật cuối:</strong> @DateTime.Now.ToString("dd/MM/yyyy")
                        </div>
                        <div class="list-group-item border-0">
                            <i class="fas fa-shield-alt text-warning me-2"></i>
                            <strong>Trạng thái:</strong> 
                            <span class="badge bg-success">Hoạt động</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
}

.border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
}

.border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
}

.border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
}

.text-xs {
    font-size: 0.7rem;
}

.text-gray-300 {
    color: #dddfeb !important;
}

.text-gray-800 {
    color: #5a5c69 !important;
}

.card {
    border: none;
    box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}

.btn:hover {
    transform: translateY(-2px);
    transition: transform 0.2s ease-in-out;
}

.list-group-item {
    padding: 0.75rem 0;
}

.list-group-item:not(:last-child) {
    border-bottom: 1px solid #e3e6f0;
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}