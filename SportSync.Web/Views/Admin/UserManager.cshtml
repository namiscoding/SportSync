@model IEnumerable<SportSync.Web.Models.ViewModels.Admin.UserViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý khách hàng";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">
                <i class="fas fa-users text-primary me-2"></i>
                Quản lý khách hàng
            </h2>
            <p class="text-muted mb-0">Quản lý danh sách khách hàng và thay đổi vai trò</p>
        </div>
        <div class="d-flex align-items-center">
            <span class="badge bg-primary fs-6 me-3">
                <i class="fas fa-user-friends me-1"></i>
                @Model.Count() khách hàng
            </span>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="UserManager" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm theo tên, email..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Tìm kiếm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Table Section -->
    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-table me-2"></i>
                Danh sách khách hàng
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0">
                                <i class="fas fa-user me-2"></i>Tên người dùng
                            </th>
                            <th class="border-0">
                                <i class="fas fa-envelope me-2"></i>Email
                            </th>
                            <th class="border-0">
                                <i class="fas fa-id-card me-2"></i>Họ tên
                            </th>
                            <th class="border-0">
                                <i class="fas fa-user-tag me-2"></i>Vai trò
                            </th>
                            <th class="border-0">
                                <i class="fas fa-circle me-2"></i>Trạng thái
                            </th>
                            <th class="border-0">
                                <i class="fas fa-calendar-plus me-2"></i>Ngày đăng ký
                            </th>
                            <th class="border-0">
                                <i class="fas fa-clock me-2"></i>Đăng nhập cuối
                            </th>
                            <th class="border-0 text-center">
                                <i class="fas fa-cogs me-2"></i>Hành động
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                        <span class="fw-medium">@customer.UserName</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">@customer.Email</span>
                                </td>
                                <td>
                                    <span class="fw-medium">@customer.FullName</span>
                                </td>
                                <td>
                                    @if (customer.Role == "Customer")
                                    {
                                        <span class="badge bg-info">
                                            <i class="fas fa-user me-1"></i>Customer
                                        </span>
                                    }
                                    else if (customer.Role == "CourtOwner")
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-crown me-1"></i>Court Owner
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@customer.Role</span>
                                    }
                                </td>
                                <td>
                                    @if (customer.AccountStatus == "Active")
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Hoạt động
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle me-1"></i>Vô hiệu hóa
                                        </span>
                                    }
                                </td>
                                <td>
                                    <span class="text-muted">@customer.RegisteredDate.ToString("dd/MM/yyyy")</span>
                                </td>
                                <td>
                                    @if (customer.LastLoginDate.HasValue)
                                    {
                                        <span class="text-muted">@customer.LastLoginDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa đăng nhập</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2 justify-content-center">
                                        <form asp-action="ToggleStatus" method="post" style="display:inline;">
                                            <input type="hidden" name="userId" value="@customer.UserId" />
                                            @if (customer.AccountStatus == "Active")
                                            {
                                                <button type="submit" class="btn btn-outline-warning btn-sm" title="Vô hiệu hóa tài khoản">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-outline-success btn-sm" title="Kích hoạt tài khoản">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            }
                                        </form>
                                        
                                        @if (customer.Role == "Customer")
                                        {
                                            <form asp-action="ChangeToCourtOwner" method="post" style="display:inline;">
                                                <input type="hidden" name="userId" value="@customer.UserId" />
                                                <button type="submit" class="btn btn-outline-primary btn-sm" 
                                                        onclick="return confirm('Bạn có chắc muốn thay đổi role của khách hàng này thành Court Owner?')"
                                                        title="Thay đổi thành Court Owner">
                                                    <i class="fas fa-crown"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-users fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Không có khách hàng nào</h5>
            <p class="text-muted">Hãy thử tìm kiếm với từ khóa khác</p>
        </div>
    }
</div>

<style>
.avatar-sm {
    width: 32px;
    height: 32px;
    font-size: 14px;
}

.table th {
    font-weight: 600;
    color: #495057;
}

.table td {
    vertical-align: middle;
}

.badge {
    font-size: 0.75rem;
}

.btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}