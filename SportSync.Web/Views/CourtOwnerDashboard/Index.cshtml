@{
    ViewData["Title"] = "Bảng Điều Khiển Chủ Sân";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold">@ViewData["Title"]</h1>
        <div>
            <a asp-controller="CourtComplex" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Thêm Khu Phức Hợp Mới
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <p class="lead">Chào mừng bạn đến với khu vực quản lý dành cho chủ sân!</p>
    <hr />

    <div class="row g-4">
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-landmark fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Khu Phức Hợp Sân</h5>
                    <p class="card-text">Xem và quản lý tất cả các khu phức hợp sân của bạn.</p>
                    <a asp-controller="CourtComplex" asp-action="MyComplexes" class="btn btn-outline-primary">Đi đến Quản Lý</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Quản Lý Lịch Đặt</h5>
                    <p class="card-text">Theo dõi và quản lý các lượt đặt sân sắp tới và đã hoàn thành.</p>
                    <a href="#" class="btn btn-outline-success disabled">Sắp ra mắt</a> @* Liên kết này sẽ được cập nhật sau *@
                </div>
            </div>
        </div>

        @if (User.IsInRole("ProCourtOwner"))
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-utensils fa-3x text-info mb-3"></i>
                        <h5 class="card-title">Dịch Vụ & Tiện Ích (Pro)</h5>
                        <p class="card-text">Quản lý đồ ăn, thức uống, và các vật dụng cho thuê.</p>
                        <a href="#" class="btn btn-outline-info disabled">Sắp ra mắt</a> @* Liên kết này sẽ được cập nhật sau *@
                    </div>
                </div>
            </div>
        }
    </div>

    @* Thêm các thống kê hoặc thông tin khác ở đây sau này *@
    <div class="mt-5">
        <h4>Thống kê nhanh (ví dụ)</h4>
        <p>Bạn có X khu sân đang hoạt động.</p>
        <p>Có Y lượt đặt sân trong tuần này.</p>
    </div>
</div>
